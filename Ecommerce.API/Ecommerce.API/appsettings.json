{
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=.;Database=Full_Ecommerce;Trusted_Connection=True;Encrypt=False;MultipleActiveResultSets=true",
    "Redis": "localhost:6379"
  },
  "Token": {
    "Key": "ThisIsAVeryLongSecretKeyForJWTTokenGenerationThatMeetsTheMinimumRequirement512Bits!",
    "Audience": "http://localhost:4200",
    "Issuer": "https://localhost:7246",
    "LifetimeInMinutes": 1
  },
  "ApiUrl": "https://localhost:7246",
  "UiUrl": "http://localhost:4200",
  "UiUrls": "https://localhost:4200",
  "Redis": {
    "DefaultTTL": 30
  },
  "RateLimiting": {
    "Authentication": {
      "PermitLimit": 5,
      "WindowMinutes": 1,
      "QueueLimit": 2
    },
    "CustomerRegister": {
      "PermitLimit": 3,
      "WindowMinutes": 5,
      "QueueLimit": 1
    },
    "Products": {
      "PermitLimit": 100,
      "WindowMinutes": 1,
      "SegmentsPerWindow": 6,
      "QueueLimit": 10
    },
    "CustomerCart": {
      "TokenLimit": 50,
      "ReplenishmentPeriodMinutes": 1,
      "TokensPerPeriod": 15,
      "QueueLimit": 5
    },
    "CustomerOrders": {
      "TokenLimit": 10,
      "ReplenishmentPeriodMinutes": 1,
      "TokensPerPeriod": 2,
      "QueueLimit": 3
    },
    "CustomerProfile": {
      "PermitLimit": 20,
      "WindowMinutes": 1,
      "SegmentsPerWindow": 4,
      "QueueLimit": 3
    },
    "CustomerWishlist": {
      "TokenLimit": 30,
      "ReplenishmentPeriodMinutes": 1,
      "TokensPerPeriod": 10,
      "QueueLimit": 5
    },
    "Payment": {
      "ConcurrentLimit": 2,
      "QueueLimit": 1
    },
    "Admin": {
      "PermitLimit": 50,
      "WindowMinutes": 1,
      "SegmentsPerWindow": 6,
      "QueueLimit": 5
    },
    "Global": {
      "TokenLimit": 300,
      "ReplenishmentPeriodMinutes": 1,
      "TokensPerPeriod": 100,
      "QueueLimit": 10
    },
    "Authenticated": {
      "TokenLimit": 100,
      "ReplenishmentPeriodMinutes": 1,
      "TokensPerPeriod": 20,
      "QueueLimit": 5
    }
  },
  "RequestTiming": {
    "FastThreshold": 300,
    "SlowThreshold": 1000
  }
}
